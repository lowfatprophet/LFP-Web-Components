{
    "include": ["./src/**/*"],
    "compilerOptions": {
        /* Base options */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "verbatimModuleSyntax": true,
        // "moduleDetection": "force",

        "outDir": "dist",

        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "es2021"
        ],
        "sourceMap": false,
        "removeComments": true,

        /* Strictness */
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "noUncheckedIndexedAccess": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "exactOptionalPropertyTypes": true
    }
}