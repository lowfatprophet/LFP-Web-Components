{
  "private": true,
  "name": "@lowfatprophet/lfp-wc",
  "version": "0.0.2",
  "description": "A comprehensive collection of web components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lowfatprophet/LFP-Web-Components.git"
  },
  "keywords": [
    "webcomponent",
    "web-component",
    "webcomponents",
    "web-components",
    "vanillajs",
    "vanilla-js",
    "frontend"
  ],
  "author": "lowfatprophet <lowfatprophet@googlemail.com> (https://lowfatprophet.codeberg.page)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lowfatprophet/LFP-Web-Components/issues"
  },
  "homepage": "https://github.com/lowfatprophet/LFP-Web-Components#readme",
  "scripts": {
    "watch": "tsc watch && npx cem analyze",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "type": "module",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "target": {
    "default": {
      "isLibrary": true,
      "sourceMap": false,
      "context": "browser",
      "outputFormat": "esmodule",
      "includeNodeModules": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-typescript": "^7.26.0",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/testing-helpers": "^3.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "styled-components": "^6.1.12",
    "testing-library": "^0.0.2",
    "testing-library__dom": "^7.29.4-beta.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "testEnvironment": "./node_modules/testing-library__dom",
    "testMatch": [
      "**/src/tests/*.test.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(testing-library__dom|@open-wc)/)"
    ],
    "setupFilesAfterEnv": [
      "./src/tests/testSetup.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
